<h1 align="center">All Bukken Listers</h1>
<div align="center">
  %= will_paginate %>
  <%= @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="bukken-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.bukkens.count, "bukken") if user.bukkens %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  %= will_paginate %>
</div>
