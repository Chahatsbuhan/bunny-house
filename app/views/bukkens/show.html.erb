<h2 align="center">Title: <%= @bukken.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @bukken.user %>
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <!--<li> Created by:</li>-->
        <li><%= link_to gravatar_for(@bukken.user), user_path(@bukken.user) %></li>
        <li class="bukken-title">
          <%= link_to @bukken.user.username, user_path(@bukken.user) %>
        </li>
        <li><small>
          <%= pluralize(@bukken.user.bukkens.count, "bukken") if @bukken.user.bukkens %>
        </small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@bukken.description) %>
  <div class="bukken-actions">
    <%= link_to "Edit this bukken", edit_bukken_path(@bukken), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this bukken", bukken_path(@bukken), method: :delete,
                                      data: {confirm: "Are you sure you want to delete this bukken?"},
                                      class: "btn btn-xs btn-danger" %>
    <%= link_to "View all bukkens", bukkens_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>
